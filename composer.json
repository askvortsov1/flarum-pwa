{
  "name": "askvortsov/flarum-pwa",
  "description": "Turn your flarum site into a progressive web app!",
  "keywords": [
    "flarum"
  ],
  "type": "flarum-extension",
  "license": "MIT",
  "require": {
    "flarum/core": "^0.1.0-beta.14"
  },
  "conflict": {
    "minishlink/web-push": "<5.2.5 || >=6"
  },
  "suggest": {
    "ext-gmp": "This is required for push notifications",
    "minishlink/web-push": "This is required for push notifications"
  },
  "authors": [
    {
      "name": "Alexander Skvortsov",
      "email": "sasha.skvortsov109@gmail.com",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "Askvortsov\\FlarumPWA\\": "src/"
    }
  },
  "extra": {
    "flarum-extension": {
      "title": "Flarum Progressive Web App",
      "icon": {
        "name": "fas fa-mobile-alt",
        "backgroundColor": "#6932D1",
        "color": "#fff"
      }
    },
    "flagrow": {
      "discuss": ""
    }
  }
}
